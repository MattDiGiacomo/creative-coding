<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8">
<style type="text/css">
body {
 background: #f5f5dc;
 color: #333;
 margin: 0 24pt 0 24pt;
 font-family: Optima, sans-serif;
 font-size: 13pt;
}
div {
 height: 16pt;
}
a {
 color: #d2691e;
 text-decoration: none;
}
</style>
<script type="text/javascript">
var t=0;
var n=0;
var paths=0;
var starters='salad,soup,bruschetta,shrimp cocktail'.split(',');
var mains='steak,pasta,burger,pizza,grilled chicken'.split(',');
var sides='fries,mashed potatoes,steamed veggies,garlic bread'.split(',');
var desserts='cake,ice cream,pie,pudding'.split(',');
var drinks='wine,beer,cocktail,juice,water'.split(',');
function rand_range(max) {
 return Math.floor(Math.random()*(max+1));
}
function choose(array) {
 return array[rand_range(array.length-1)];
}
function menu() {
 var p=rand_range(1);
 var words=choose(starters);
 words+=' with '+choose(sides);
 words+=' and '+choose(mains);
 words+=' followed by '+choose(desserts);
 words+=' and a glass of '+choose(drinks)+'.';
 return words;
}
function do_line() {
 var main=document.getElementById('main');
 if (t<=25) {
  t+=1;
 } else {
  main.removeChild(document.getElementById('main').firstChild);
 }
 if (n===0) {
  text=' ';
 } else if (n==1) {
  paths=2+rand_range(2);
  text=menu();
 } else if (n<paths) {
  text=menu();
 } else if (n==paths) {
  text=menu();
 } else if (n==paths+1) {
  text=' ';
 } else if (n==paths+2) {
  text=menu();
 } else {
  text=' ';
  n=0;
 }
 n+=1;
 text=text.substring(0,1).toUpperCase()+text.substring(1,text.length);
 last=document.createElement('div');
 last.appendChild(document.createTextNode(text));
 main.appendChild(last);
}
function poem() {
 setInterval(do_line, 1200);
}
</script>
  <title>Food Menu</title>
</head>
<body onload="poem()">
<div style="float:right; margin-top:12px; color:#d2691e; height:60pt">
<div>Food Menu &middot; 2024-11-13</div>
